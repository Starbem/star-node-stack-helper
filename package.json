{
  "name": "star-node-stack-helper",
  "version": "1.0.0",
  "description": "A helper to be used with node and aws stack",
  "author": "Julio Sousa <julio.sousa@starbem.app>",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/starbem/star-node-stack-helper.git"
  },
  "bugs": {
    "url": "https://github.com/starbem/star-node-stack-helper/issues"
  },
  "keywords": [
    "javascript",
    "typescript",
    "node",
    "aws",
    "stack",
    "helper",
    "secrets-manager",
    "elasticsearch",
    "opensearch",
    "logging"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "husky",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist coverage",
    "prebuild": "npm run clean"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.830.0",
    "@opensearch-project/opensearch": "^2.4.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^28.14.0",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "ts-jest": "^30.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "packageManager": "pnpm@8.6.2"
}